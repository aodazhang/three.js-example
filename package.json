{
  "name": "three.js-example",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "vite --mode development --host",
    "build": "vue-tsc && vite build --mode production",
    "preview": "vite preview --host",
    "lint": "prettier --write ./",
    "commit": "git add . && git-cz",
    "prepare": "husky install"
  },
  "dependencies": {
    "d3-geo": "^3.1.0",
    "gsap": "^3.12.5",
    "lil-gui": "^0.19.1",
    "lygia": "^1.1.3",
    "stats.js": "^0.17.0",
    "three": "^0.161.0",
    "vue": "^3.3.11",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@types/d3-geo": "^3.1.0",
    "@types/node": "^20.11.13",
    "@types/stats.js": "^0.17.3",
    "@types/three": "^0.161.1",
    "@vitejs/plugin-vue": "^4.5.2",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.0.0",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.4",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-compression2": "^0.12.0",
    "vite-plugin-glsl": "^1.2.1",
    "vue-tsc": "^1.8.25"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "none",
    "bracketSpacing": true,
    "bracketSameLine": false
  },
  "lint-staged": {
    "*.{js,json,md,ts,vue}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  }
}
