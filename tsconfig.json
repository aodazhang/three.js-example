{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Node", // 避免 @types/three 类型错误
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".", // 当前项目根路径
    "paths": {
      "@/*": ["src/*"]
    }, // 当前配置路径别名
    "strictNullChecks": false, // 非 null 类型可以赋值为 null
    "allowSyntheticDefaultImports": true // 是否允许合成 import：vite 对于部分库必须允许合成 import，否则运行会报错，例如 dayjs、nprogress、sortablejs、crypto-js、@amap/amap-jsapi-loader、stats.js 等
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
